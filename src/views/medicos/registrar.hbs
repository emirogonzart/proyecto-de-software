{{#each errors}}
 <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}

    <div class="class-col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Registrar Nuevo Medico</h3>
            </div>
            <div class="card-body">
                <form action="/medicos/nuevo-medico" method="POST">
                    <div class="form-group">
                        <input type="number" name="cedula" class="form-control" placeholder="Cédula" style="width: 50%;"
                            autofocus required>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-md-3 input-group input-group-sm">
                            <input type="text" name="nombre" placeholder="Nombre" class="form-control"
                                aria-describedby="basic-addon1" style="margin-right: 5px;" required>
                            <input type="text" name="apellido" placeholder="Apellido" class="form-control"
                                aria-describedby="basic-addon1" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="Correo" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="passwd1" class="form-control" placeholder="Contraseña" required>
                        <input type="password" name="passwd2" class="form-control" placeholder="Repita su Contraseña" required>
                    </div>
                    <div class="form-group">
                        <input type="number" name="tlf" class="form-control" placeholder="Telefono" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="mpps" class="form-control" placeholder="Matricula MPPS" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="especialidad" class="form-control" placeholder="Especialidad" required>
                    </div>
                    <div class="form-group">
                        <input name="direccion" class="form-control" placeholder="Dirección" required>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Registrar</button>
                    </div>
                </form>
                <p style="text-align: center; margin-top: 10px;">¿Ya tienes cuenta?
                    Inicia sesión haciendo clic <a href='/iniciar-sesion'>aquí</a> </p>
            </div>
        </div>
    </div>